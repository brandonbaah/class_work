<% @carted_products.each do |carted_product| %>
<h1><%= carted_product.product.name %></h1>
<h1><%= carted_product.quantity %></h1>
<div><%= link_to "Delete", "/checkout/#{carted_product.id}", method: "delete" %></div>
<% end %>

  <%= form_tag '/orders', method: :post do  %>
    <%= submit_tag "Buy Now" %>
  <% end %>
