<h1 align="center">Here are all products!</h1>
<h4><%= link_to "Create a new recipe", "/recipes/new" %></h4>

<div class="row product-index">
  <%@products.each do |product| %>
    <a href="/products/<%= product.id%>">
      <div class="col-md-4 well">
        <h2 align="center"><%= product.name %></h2>
        <h4 align="center"><%= product.price %></h4>
        <h2 align="center"><img src="<%= product.image %>" alt"" height="300" width="300"></h2>
        <h5 align="center"><%= product.description %></h5>
      </div>
    </a>
  <% end %>
</div>
