<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being created:</h2>

    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag("/products", method: "post") do %>
  <%= label_tag(:name) %>
  <%= text_field_tag(:name, @product.name) %>

  <%= label_tag(:price) %>
  <%= text_field_tag(:price, @product.price) %>

  <%= label_tag(:image) %>
  <%= text_field_tag(:image, @product.image) %>

  <%= label_tag(:description) %>
  <%= text_field_tag(:description, @product.description) %>

<div>
  <%= submit_tag("Enter New Product") %>
</div>
<% end %>
