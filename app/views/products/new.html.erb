<!DOCTYPE html>
<html>
<head>
<style>
body {background-color: steelblue;}
h1   {color: white;}
p    {color: red;}
</style>
</head>
<body>

<h1>Enter New Product Here:</h1>

<%= form_tag("/products", method: "post") do %>
  <%= label_tag(:name) %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:price) %>
  <%= text_field_tag(:price) %>

  <%= label_tag(:image) %>
  <%= text_field_tag(:image) %>

  <%= label_tag(:description) %>
  <%= text_field_tag(:description) %>

<div>
  <%= submit_tag("Enter New Product") %>
</div>
<% end %>
